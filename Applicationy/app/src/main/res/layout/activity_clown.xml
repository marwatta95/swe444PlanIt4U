<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.marwa.applicationy.HallActivity"
    android:background="@drawable/two"
    >


    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewUserEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="The Clowns you have just click to delete"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <ListView
                android:id="@+id/list10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>
        </ScrollView>
        <Button
            android:id="@+id/add9"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:onClick="uploadData"
            android:text="ADD Clown" />

        <EditText
            android:id="@+id/editTextName9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:inputType="text" />
        <EditText
            android:id="@+id/editTextPrice9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price for a party in SR"
            android:inputType="number" />



        <Button
            android:id="@+id/uploadImage9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Upload Image"
            android:onClick="browseImages"
            />
        <ImageView
            android:id="@+id/insertImages9"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/addNew9"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:onClick="uploadData"
            android:text="ADD the new Clown" />
        <Button
            android:id="@+id/buttonLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"

            android:layout_gravity="center_horizontal"

            android:text="Logout" />



    </LinearLayout>


</android.support.constraint.ConstraintLayout>

